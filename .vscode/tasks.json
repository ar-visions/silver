                "group": "build0",
                "clear": true
            },
			"isBackground": false,
			"problemMatcher": ["$gcc"],
            "osx": {
                "command": "make -j8"
            },
            "linux": {
                "command": "make -j8"
            }
        },
        {
            "label": "build-trinity",
            "type": "shell",
			"options": {
                "cwd": "${workspaceFolder}/../trinity"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "build0",
                "clear": true
            },
			"isBackground": false,
			"problemMatcher": ["$gcc"],
            "osx": {
                "command": "make -j8"
            },
            "linux": {
                "command": "make -j8"
            }
        },
        {
            "label": "build-hyperspace",
            "type": "shell",
			"options": {
                "cwd": "${workspaceFolder}/../hyperspace"
            },
            "group": {
