{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "bootstrap",
            "command": "${workspaceFolder}/bootstrap.bat",
            "args": ["--debug"],
    		"options": {
                "cwd": "${workspaceFolder}/debug"
            }
        },
        {
            "label": "build-silver-ninja",
            "type": "shell",
			"options": {
                "cwd": "${workspaceFolder}/../silver"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "build0",
                "clear": true
            },
			"isBackground": false,
			"problemMatcher": ["$gcc"],
            "command": "${workspaceFolder}/bin/ninja",
            "args": ["-C", "debug"],
            "env": { "VERBOSE": "1", "CC": "clang", "IMPORT": "/src/silver" }
        },
        {
            "label": "build-hyperspace",
            "type": "shell",
			"options": {
                "cwd": "${workspaceFolder}/../hyperspace"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "build0",
                "clear": true
            },
			"isBackground": false,
			"problemMatcher": ["$gcc"],
            "windows": {
                "command": "msbuild silver.sln /t:hyperspace"
            },
            "osx": {
                "command": "make"
            },
            "linux": {
                "command": "make"
            }
        },
        {
            "label": "build-orbiter",
            "type": "shell",
			"options": {
                "cwd": "${workspaceFolder}/../orbiter"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "build0",
                "clear": true
            },
			"isBackground": false,
			"problemMatcher": ["$gcc"],
            "osx": {
                "command": "make -j8"
            },
            "linux": {
                "command": "make -j8"
            }
        },
        {
            "label": "build-asnes",
            "type": "shell",
			"options": {
                "cwd": "${workspaceFolder}/../asnes"
            },
            "group": {
