{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: silver44",
            "type": "debugpy",
            "args": ["WGPU.si"],
            "request": "launch",
            "program": "${workspaceFolder}/silver/silver44.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/silver"
        },
        {
            "name": "Python: vision:annotate",
            "type": "debugpy",
            "args": ["-a", "scale", "-s", "center-offset"],
            "request": "launch",
            "program": "${workspaceFolder}/../hyperspace/vision-annotate.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/../hyperspace/"
        },
        {
            "name": "Python: train:simple",
            "type": "debugpy",
            "args": ["-b", "1", "-m", "simple", "-s", "center-offset", "-i", "32", "-r", "1", "-e", "1", "--learning-rate", "0.0001"],
            "request": "launch",
            "program": "${workspaceFolder}/../hyperspace/vision-train.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/../hyperspace/"
        },
        {
            "name": "Python: train:base",
            "type": "debugpy",
            "args": ["-b", "1", "-m", "base", "-s", "center-offset", "-i", "32", "-r", "4", "-e", "1", "--learning-rate", "0.0001"],
            "request": "launch",
            "program": "${workspaceFolder}/../hyperspace/vision-train.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/../hyperspace/"
        },
        {
            "name": "Python: train:target",
            "type": "debugpy",
            "args": ["-b", "1", "-m", "target", "-s", "center-offset", "-i", "32", "-r", "16", "-e", "16", "--learning-rate", "0.0001"],
            "request": "launch",
            "program": "${workspaceFolder}/../hyperspace/vision-train.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/../hyperspace/"
        },
        {
            "name": "Python: train:eyes",
            "type": "debugpy",
            "args": ["-b", "1", "-m", "eyes", "-s", "center-offset", "-i", "32", "-r", "32", "-e", "8", "--learning-rate", "0.001"],
            "request": "launch",
            "program": "${workspaceFolder}/../hyperspace/vision-train.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/../hyperspace/"
        },
        {
            "name": "Python: train:track",
            "type": "debugpy",
            "args": ["-b", "2", "-m", "track", "-s", "center-offset", "-i", "32", "-r", "16", "-e", "16", "--learning-rate", "0.001"],
            "request": "launch",
            "program": "${workspaceFolder}/../hyperspace/vision-train.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/../hyperspace/"
        },
        {
            "name": "Python: vision:record",
            "type": "debugpy",
            "args": ["-s", "vision2", "-f"],
            "request": "launch",
            "program": "${workspaceFolder}/../hyperspace/vision-record.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/../hyperspace/",
        },
        {
            "name":       "silver-import (orbiter)",
            "type":       "lldb",
            "request":    "launch",
            "program":    "${workspaceFolder}/bin/silver-import",
            "args":     [ "${workspaceFolder}/../orbiter" ],
            "cwd":        "${workspaceFolder}",
            "env":      { "VERBOSE": "1", "CC": "clang" }
        },
        {
            "name": "silver-import (trinity)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/silver-import",
            "args": [
                "${workspaceFolder}/../trinity"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "VERBOSE",
                    "value": "1"
                },
                {
                    "name": "CC",
                    "value": "clang"
                },
                {
                    "name": "CXX",
                    "value": "clang++"
                }
            ]
        },
        {
            "name": "silver-import (mx)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/silver-import",
            "args": [
                "${workspaceFolder}/../mx"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../mx",
            "environment": [
                {
                    "name": "CC",
                    "value": "clang"
                }
            ]
        },
        {
            "name":       "silver-import (hyperspace)",
            "type":       "lldb",
            "request":    "launch",
            "program":    "${workspaceFolder}/bin/silver-import",
            "args":     [ "${workspaceFolder}/../hyperspace" ],
            "cwd":        "${workspaceFolder}",
            "env":      { "VERBOSE": "1", "CC": "clang" }
        },
        {
            "name":       "silver88",
            "type":       "lldb",
            "request":    "launch",
            "preLaunchTask": "build-silver-ninja",
            "program":    "${workspaceFolder}/install/bin/silver",
            "args":     [ "--module", "${workspaceFolder}/foundation/test" ],
            "cwd":        "${workspaceFolder}/install/lib",
            "env":      {
                "VERBOSE": "1",
                "LD_LIBRARY_PATH":"${workspaceFolder}/install/lib",
                "IMPORT":  "${workspaceFolder}/install",
                "ASAN_OPTIONS": "detect_leaks=0"
            }
        },
        {
            "name":       "silver / orbiter",
            "type":       "lldb",
            "request":    "launch",
            "preLaunchTask": "build-silver-ninja",
            "program":    "${workspaceFolder}/install/bin/silver",
            "args":     [ "--source", "${workspaceFolder}/../orbiter/orbiter" ],
            "cwd":        "/src",
            "env":      {
                "VERBOSE": "1",
                "LD_LIBRARY_PATH":"${workspaceFolder}/install/lib",
                "IMPORT":  "${workspaceFolder}/install",
                "ASAN_OPTIONS": "detect_leaks=0"
            }
        },
        {
            "name":       "run-test",
            "type":       "lldb",
            "request":    "launch",
            "preLaunchTask": "build-silver-ninja",
            "program":    "${workspaceFolder}/install/lib/test",
            "cwd":        "${workspaceFolder}/install/lib",
            "env":      {
                "VERBOSE": "1",
                "LD_LIBRARY_PATH":"${workspaceFolder}/install/lib",
                "IMPORT":  "${workspaceFolder}/install",
                "ASAN_OPTIONS": "detect_leaks=0"
            }
        },
        {
            "name": "hyperspace-train",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../hyperspace/debug/bin/hyperspace-train",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../hyperspace/share",
            "environment": [
            ],
            "MIMode": "gdb"
        },
        {
            "name": "orbiter",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/orbiter",
            "cwd": "${workspaceFolder}/share/orbiter",
            "args": [],
            "env": {"LD_LIBRARY_PATH":"${workspaceFolder}/lib"},
        },
        {
            "name": "asnes",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/asnes",
            "cwd": "${workspaceFolder}/share/asnes",
            "args": ["--rom", "rom/mario.smc", "--spc_rom", "bin/spc700.rom"],
            "env": {"LD_LIBRARY_PATH":"${workspaceFolder}/lib"},
        },
        {
            "name": "hyperspace",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/install/bin/hyperspace",
            "cwd": "${workspaceFolder}/share/hyperspace",
            "args": [],
            "env": {"LD_LIBRARY_PATH":"${workspaceFolder}/lib"},
        }
    ]
}